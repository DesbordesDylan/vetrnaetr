				<label for="album_support" class="required">Support de l'album</label><input class="inputCreate" type="text" id="album_support" name="album[support]" required="required"></div>
			<div class="row">
				<label for="album_price" class="required">Prix de l'album</label><input class="inputCreate" type="text" id="album_price" name="album[price]" required="required"></div>
			<div class="row">
				<button type="submit" id="album_save" name="album[save]">Enregistrer</button>
			</div><input class="inputCreate" type="hidden" id="album__token" name="album[_token]" value="1GTI3KCcsg0hQORUhpZIjvAVsj5DZHl4jST4zwItDsI"></form>
	</div>


{% endblock %}
